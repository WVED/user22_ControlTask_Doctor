<Window x:Class="HospitalAppAdmin.UI.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalAppAdmin.UI"
        mc:Ignorable="d"
        Title="Авторизация" Height="270" Width="210" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"></TextBlock>
        <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="15" Margin="0,10,0,0"></TextBlock>
        <TextBox Name="txtBoxLogin" Height="25"></TextBox>
        <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="15" Margin="0,10,0,0"></TextBlock>
        <PasswordBox Name="pswBox" Width="175" Margin="5" Height="25"></PasswordBox>
        <StackPanel Orientation="Vertical">
            <Button Content="Войти" Name="BtnLogin" Click="BtnLogin_Click"></Button>
            <Button Content="Выход" Name="BtnExit" Click="BtnExit_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
